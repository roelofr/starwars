{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "extends": "google",
    "root": true,
    "env": {
        "browser": true,
        "jquery": true,
        "node": true
    },
    "globals": {
        "dragula": true,
        "GoogleMapsLoader": true
    },
    "rules": {
        "no-bitwise": 2,
        "no-tabs": 2,
        "no-multi-spaces": 2,
        "curly": 2,
        "eol-last": 2,
        "eqeqeq": 2,
        "no-eval": 0,
        "no-shadow": 2,
        "no-caller": 2,
        "no-undef": 2,
        "no-unused-vars": 2,
        "no-sequences": 2,
        "no-new": 2,
        "guard-for-in": 2,
        "valid-typeof": 2,
        "no-extend-native": 2,
        "strict": [2, "function"],
        "linebreak-style": 2,
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-use-before-define": [2, {"functions": false}],
        "quote-props": [2, "as-needed"],
        "wrap-iife": [2, "outside"],
        "consistent-return": 2
    }
}
